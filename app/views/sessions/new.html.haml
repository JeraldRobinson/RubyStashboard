- provide :title, "Sign in"

%h1 Sign in
%br/
= form_for(:session, url: sessions_path) do |f|
  .field
    = f.label :email
    %br/
    = f.text_field :email
    .field
    = f.label :password
    %br/
    = f.password_field :password
    .signup-link
      = f.submit "Sign in", :class => "button"
      %br/
      %br/
      New user? #{link_to "Sign up now!", signup_path}